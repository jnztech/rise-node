FROM node:13-alpine

RUN echo "**** install Python ****" && \
    apk add --no-cache python3 && \
    if [ ! -e /usr/bin/python ]; then ln -sf python3 /usr/bin/python ; fi && \
    echo "**** install pip ****" && \
    python3 -m ensurepip && \
    rm -r /usr/lib/python*/ensurepip && \
    pip3 install --no-cache --upgrade pip setuptools wheel && \
    if [ ! -e /usr/bin/pip ]; then ln -s pip3 /usr/bin/pip ; fi && \
    echo "**** install git ****" && \
    apk add --no-cache git && \
    echo "**** install curl ****" && \
    apk add --no-cache curl

ENV SUPERCRONIC_URL=https://github.com/aptible/supercronic/releases/download/v0.1.11/supercronic-linux-amd64 \
    SUPERCRONIC=supercronic-linux-amd64 \
    SUPERCRONIC_SHA1SUM=a2e2d47078a8dafc5949491e5ea7267cc721d67c \
    PYTHONUNBUFFERED=1

RUN curl -fsSLO "$SUPERCRONIC_URL" \
 && echo "${SUPERCRONIC_SHA1SUM}  ${SUPERCRONIC}" | sha1sum -c - \
 && chmod +x "$SUPERCRONIC" \
 && mv "$SUPERCRONIC" "/usr/local/bin/${SUPERCRONIC}" \
 && ln -s "/usr/local/bin/${SUPERCRONIC}" /usr/local/bin/supercronic

RUN apk update && apk add tzdata && \ 
    cp /usr/share/zoneinfo/Europe/London /etc/localtime && \ 
    echo "Europe/London" > /etc/timezone && \ 
    apk del tzdata && rm -rf /var/cache/apk/* && \
    set -ex && apk --no-cache add sudo

RUN pip3 install requests
RUN echo '%rise ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers
RUN randompw=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 8 | head -n 1)
RUN adduser --disabled-password --gecos "Admin" rise
RUN echo rise:$randompw | chpasswd
USER rise

COPY --chown=rise ./healthcheck.js /home/rise/healthcheck.js

HEALTHCHECK --interval=12s --timeout=12s --start-period=30s \  
 CMD node /home/rise/healthcheck.js

WORKDIR /home/rise
RUN git clone https://github.com/JannasTer/rise-pool.git

WORKDIR /home/rise/rise-pool
RUN git clone https://github.com/vekexasia/dpos-api-fallback

WORKDIR /home/rise/rise-pool/dpos-api-fallback
RUN npm install
RUN npm run package

USER root
RUN  echo "**** del git ****" && \
     apk del git && \
     echo "**** del curl ****" && \
     apk del curl

USER rise
COPY --chown=rise ./start.sh /home/rise/start.sh
RUN chmod +x /home/rise/start.sh
ENTRYPOINT ["sh","/home/rise/start.sh"]
CMD ["supercronic", "/home/rise/rise-pool/one"]